<div class="projekt-labels">
  <% @projekt_labels.each do |label| %>
    <% if filter_link? %>
      <%= link_to link_path(label),
        remote: true,
        class: "js-remote-link-push-state projekt-label-link",
        "data-footer-tab-back-url": footer_tab_back_button_url(label),
        onclick: '$(".spinner-placeholder").addClass("show-loader")' do %>
        <span class="projekt-label <%= "selected" if label_selected?(label) %>">
          <i class="fas fa-<%= label.icon %>"></i>
          <%= label.name %>
        </span>
      <% end %>
    <% else %>
      <span class="projekt-label selected">
        <i class="fas fa-<%= label.icon %>"></i>
        <%= label.name %>
      </span>
    <% end %>
  <% end %>
</div>
