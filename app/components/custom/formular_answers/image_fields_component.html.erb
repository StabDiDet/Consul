<div class="image direct-upload nested-fields">
  <%= f.hidden_field :id %>
  <%= f.hidden_field :cached_attachment %>
  <%= f.hidden_field :formular_field_key, value: formular_field.key %>

  <div class="small-12 column title">
    <%= f.text_field :title, placeholder: t("images.form.title_placeholder") %>
  </div>

  <% if formular_answer_image.attachment.attached? && formular_answer_image.attachment.image? %>
    <%= render_image(formular_answer_image, :large, false) %>
  <% end %>

  <div class="small-12 column attachment-actions">
    <p class="file-name small-9 column"><%= formular_answer_image.attachment_file_name %></p>

    <div class="small-9 column action-add attachment-errors image-attachment">
      <%= file_field(formular_answer_image) %>
    </div>

    <div class="small-3 column action-remove text-right">
      <%= destroy_link(formular_answer_image) %>
    </div>
  </div>

  <div class="small-12 column">
    <div class="progress-bar-placeholder"><div class="loading-bar"></div></div>
  </div>

  <hr>
</div>
