<% if any_selectable_projekts? %>
  <%= link_to t("debates.index.start_debate"), new_debate_path( link_params_hash ), class: "button expanded js-preselect-projekt" %>

<% elsif @current_tab_phase.present? %>
  <% if user_signed_in? && !current_user.level_three_verified? %>
    <div class="callout warning">
      <%= sanitize(t("custom.votes.not_verified",
            verify_account: link_to_verify_account)) %>
    </div>
  <% elsif !user_signed_in? %>
    <div class="callout warning">
      <%= sanitize(t("users.login_to_continue",
            signin: link_to_signin, signup: link_to_signup)) %>
    </div>
  <% end %>

<% else %>
  <%= link_to t("custom.debates.index.no_active_projekt"), '#', class: "button expanded disabled-no-active-projekt", disabled: true %>

<% end %>
