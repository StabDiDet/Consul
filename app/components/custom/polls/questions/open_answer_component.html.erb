<div class="column small-12 margin-top">
  <%= form_for open_answer, url: update_open_answer_path(question), method: :post, remote: true do |f| %>
    <%= f.text_area :open_answer_text, disabled: !can_answer? %>
    <%= f.hidden_field :answer %>
    <% if open_answer.open_answer_text.present? %>
      <%= f.submit t("custom.polls.questions.answers.update_open_answer"), disabled: !can_answer?, class: "button open-answer" %>
      <% if @open_answer_updated %>
        <div class='open-answer-saved-notice'>
          <%= t("custom.admin.polls.questions.answers.notice.open_answer_saved") %>
        </div>
      <% end %>
    <% else %>
      <%= f.submit t("custom.polls.questions.answers.save_open_answer"), disabled: !can_answer?, class: "button open-answer" %>
    <% end %>
  <% end %>
</div>
