<ul class="tabs"
    id="edit-projekt-tabs"
    data-deep-link="true"
    data-update-history="true"
    data-deep-link-smudge="true"
    data-deep-link-smudge-delay="500"
    data-tabs>
  <li class="tabs-title is-active" id="projekt-configuration-tab">
    <%= link_to "#tab-projekt-configuration" do %>
      <%= t("custom.admin.projekts.edit.projekt_configuration_tab.name") %>
    <% end %>
  </li>

  <li class="tabs-title" id="projekt-page-tab">
    <%= link_to "#tab-projekt-page" do %>
      <%= t("custom.admin.projekts.edit.projekt_page_tab.name") %>
    <% end %>
  </li>

  <li class="tabs-title" id="projekt-phases-tab">
    <%= link_to "#tab-projekt-phases" do %>
      <%= t("custom.admin.projekts.edit.projekt_phases_tab.name") %>
    <% end %>
  </li>

  <li class="tabs-title" id="projekt-settings-tab">
    <%= link_to "#tab-projekt-settings" do %>
      <%= t("custom.admin.projekts.edit.projekt_settings_tab.name") %>
    <% end %>
  </li>

  <% if current_user&.administrator? %>
    <li class="tabs-title" id="projekt-managers-tab">
      <%= link_to "#tab-projekt-managers" do %>
        <%= t("custom.admin.projekts.edit.projekt_managers_tab.name") %>
      <% end %>
    </li>
  <% end %>

  <li class="tabs-title" id="projekt-map-tab">
    <%= link_to "#tab-projekt-map" do %>
      <%= t("custom.admin.projekts.edit.projekt_map_tab.name") %>
    <% end %>
  </li>

  <li class="tabs-title" id="projekts-sdg-tab">
    <%= link_to "#tab-projekt-sdg" do %>
      <%= t("custom.admin.projekts.edit.projekt_sdg_tab.name") %>
    <% end %>
  </li>
</ul>
