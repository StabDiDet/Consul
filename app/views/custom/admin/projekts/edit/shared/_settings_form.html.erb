<%= form_for(setting, url: admin_projekt_setting_path(@projekt, setting), html: { id: "edit_#{dom_id(setting)}" }) do |f| %>
  <%= f.hidden_field :tab, value: '#tab-projekt-news' %>
  <div class="small-12 medium-6 large-8 column">
    <%= f.text_area :value, label: false, id: dom_id(setting), lines: 1 %>
  </div>
  <div class="small-12 medium-6 large-4 column">
    <%= f.submit(t("admin.settings.index.update_setting"), class: "button hollow expanded") %>
  </div>
<% end %>
