<div class="row">
  <div class="column">
    <table>
      <tbody>
        <% options.each do |option| %>
          <tr>
            <td class="small-6">
              <strong><%= t("custom.projekt_phase_settings.#{@projekt_phase.resources_name}.#{option.key}") %></strong>
              <br>
              <span class="small">
                <%= t("custom.projekt_phase_settings.#{@projekt_phase.resources_name}.#{option.key}_description", default: t("admin.settings.no_description")) %>
              </span>
            </td>
            <td class="small-6">
              <%= render "admin/settings/settings_form", setting: option %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
