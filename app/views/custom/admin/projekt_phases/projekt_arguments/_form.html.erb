<%= form_with(model: projekt_argument, url: polymorphic_path([@namespace, @projekt_phase, projekt_argument])) do |f| %>
  <div class='small-12 medium-7'>
    <div class="d-flex">
      <div class="d-flex d-flex-start">
        <%= f.radio_button :pro, true, label: false, required: true, id: "projekt_argument_pro_#{projekt_argument.id}" %>
        <%= f.label "pro_#{projekt_argument.id}", t("custom.admin.projekt_phases.projekt_arguments.argument_pro") %>
      </div>

      <div class="d-flex d-flex-start margin-left">
        <%= f.radio_button :pro, false, label: false, required: true, id: "projekt_argument_cons_#{projekt_argument.id}" %>
        <%= f.label "cons_#{projekt_argument.id}", t("custom.admin.projekt_phases.projekt_arguments.argument_cons") %>
      </div>
    </div>
  </div>

  <div class='small-12 medium-7'>
    <%= f.text_field :name, { id: "projekt_argument_name_#{projekt_argument.id}", required: true } %>
  </div>

  <div class='small-12 medium-7'>
    <%= f.text_field :party, { id: "projekt_argument_party_#{projekt_argument.id}" } %>
  </div>

  <div class='small-12 medium-7'>
    <%= f.text_field :position, { id: "projekt_argument_position_#{projekt_argument.id}", required: true } %>
  </div>

  <div class='small-12 medium-7'>
    <%= f.text_area :note, { id: "projekt_argument_note_#{projekt_argument.id}", required: true } %>
  </div>

  <div class='small-12 medium-7 margin-bottom'>
    <%= f.file_field "image_attributes[attachment]", { required: projekt_argument.new_record?, id: "projekt_argument_image_#{projekt_argument.id}", label: t("custom.admin.projekt_phases.projekt_arguments.argument_image") } %>
    <%= f.hidden_field "image_attributes[title]", value: "photo" %>
    <%= f.hidden_field "image_attributes[user_id]", value: current_user.id %>
  </div>

  <div>
    <%= f.submit(t("custom.admin.projekt_phases.projekt_arguments.button"), class: "button") %>
  </div>
<% end %>
