<% image_fields ||= :image %>

<%= f.label image_fields, t("custom.admin.site_customization.pages.images.form.title") %>
<p class="help-text">
<%= t "custom.admin.site_customization.pages.images.form.note",
  accepted_content_types: imageable_humanized_accepted_content_types,
  max_file_size: imageable_max_file_size %>
</p>

<div id="nested-image">
  <%= f.fields_for image_fields do |image_builder| %>
    <%= render "images/image_fields", f: image_builder, imageable: imageable %>
  <% end %>
</div>

<%= link_to_add_association t("custom.admin.site_customization.pages.images.form.add_new_image"), f, image_fields,
                            force_non_association_create: true,
                            partial: "images/image_fields",
                            id: "new_image_link",
                            class: "button upload-image
                                    #{"hide" if image_fields == :image && imageable.image.present?}",
                            render_options: {
                              locals: { imageable: imageable }
                            },
                            data: {
                              association_insertion_node: "#nested-image",
                              association_insertion_method: "append"
                            } %>
