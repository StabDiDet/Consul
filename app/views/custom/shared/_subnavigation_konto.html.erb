<li class="nav-element top-level-item js-access-top-level-menu js-prevent-key-scroll"
    aria-label='<%= t('custom.links.menu.konto_icon') if placement == "desktop" %>'
    aria-expanded="false"
    <%= "aria-haspopup=true'" if placement == 'desktop' %>
    <%= "tabindex=0" if placement == 'desktop' %>
  >

  <%= link_to account_path, class: 'account-items-icon', tabindex: "-1", aria: { hidden: true } do %>
    <%= svg_tag 'account-menu-icon', class: "account-icon" %>
  <% end %>

  <% if placement == 'mobile' %>
    <%= link_to account_path, class: 'account-items-link' do %>
      <%= t('custom.menu.account') %>
    <% end %>

    <div class='nav-toggle-arrow js-toggle-mobile-flyout-item focusable'
         tabindex="0"
         aria-label='<%= t('custom.links.menu.mobile.arrow_account') %>'
         aria-haspopup=true
         aria-expanded=false
    >
    </div>
  <% end %>

  <ul class="nav-flyout-block">
    <%= render "devise/menu/login_items" %>
  </ul>
</li>
