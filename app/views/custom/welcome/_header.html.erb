    <%if header_large%>
      .home-page .jumbo{
        background-image: url(<%=header_large.image.attachment.url%>);
        background-size: cover;
        background-position: center 25%;
      }
    <%end%>
  </style>

  <div class="jumbo highlight">
    <div class="row">
      <div class="column">
        <div class='jumbo-message'>
        </div>
      </div>
    </div>
  </div>
<% end %>
