<h2><%= t("officing.residence.new.title") %></h2>

<div class="row verification account">
  <div class="small-12 medium-8 column">
    <%= form_with url: officing_offline_ballots_find_or_create_user_path do |f| %>
      <%= f.hidden_field :budget_id, value: params[:budget_id]  %>

      <div class="small-12 medium-6">
        <%= f.text_field :first_name,
                         value: params[:first_name],
                         label: t("custom.officing.budgets.verify_users.first_name"),
                         autocomplete: "off" %>
      </div>

      <div class="small-12 medium-6">
        <%= f.text_field :last_name,
                         value: params[:last_name],
                         label: t("custom.officing.budgets.verify_users.last_name"),
                         autocomplete: "off" %>
      </div>

      <div class="small-12 medium-6">
        <%= f.text_field :plz,
                         value: params[:plz],
                         label: t("custom.officing.budgets.verify_users.plz"),
                         autocomplete: "off" %>
      </div>

      <div class="date-of-birth small-12 medium-6 clear">
      <%= f.date_select :date_of_birth,
                        prompt: true,
                        label: t("custom.officing.budgets.verify_users.date_of_birth"),
                        start_year: 1900, end_year: minimum_required_age.years.ago.year %>
      </div>

      <div class="small-12 medium-6">
        <input type="submit" value="<%= t("officing.residence.new.submit") %>" class="button expanded">
      </div>
    <% end %>
  </div>
</div>
