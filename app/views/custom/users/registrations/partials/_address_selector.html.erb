<% selected_value ||= nil %>
<% invalid_field_class ||= false %>
<%= label_tag :form_registered_address_id, t("custom.devise_views.users.registrations.new.form_registered_address_label"), class: "#{'is-invalid-label' if invalid_field_class}" %>
<%= select_tag :form_registered_address_id,
  options_for_select(
    registered_addresses.all.map { |adr| [adr.formatted_name, adr.id] },
    selected_value
  ),
  {
    prompt: t("custom.helpers.select.prompt"),
    class: "js-registration-address-selector show-arrow #{'is-invalid-input' if invalid_field_class}",
    style: "background-color:#f8f8f8;"
  }
%>
