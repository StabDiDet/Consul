<% if Setting.new_design_enabled? %>
  $("#<%= dom_id(@proposal) %>_votes").html(
    '<%= j render Proposals::NewVotesComponent.new(@proposal, voted: @voted) %>'
  );
<% else %>
  $("#<%= dom_id(@proposal) %>_votes").html(
    '<%= j render("proposals/votes", proposal: @proposal) %>'
  );
App.Followable.update("<%= dom_id(@follow.followable) %>",
                      "<%= j render("follows/follow_button", follow: @follow) %>",
                      "<%= j render("layouts/flash") %>")
<% end %>

$("div[data-voted-badge=<%= @proposal.id %>]").addClass('hide');

