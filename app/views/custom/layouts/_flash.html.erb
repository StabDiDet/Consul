<% flash.delete("timedout") %>
<% flash.each do |flash_key, flash_message| %>
  <div id="<%= flash_key %>" data-alert class="notice-container callout-slide" data-closable>
    <div class="callout notice <%= flash_key %>">
      <button class="close-button" aria-label="<%= t("application.close") %>" type="button" data-close>
        <span aria-hidden="true">&times;</span>
      </button>
      <div class="notice-text" role="alert" aria-live="assertive">
        <%= sanitize(flash[:alert]) %>
        <%= sanitize(flash[:notice]) %>
        <%= sanitize(flash[:success]) %>
        <%= sanitize(flash[:error]) %>
      </div>
    </div>
  </div>
<% end %>
