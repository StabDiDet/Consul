<% valuation = local_assigns.fetch(:valuation, false) %>
<%= tag.ul class: "no-bullet comment-list",
           aria: { live: "polite", label: t('custom.links.comments.comment_tree')  },
           id: "tree_for_comment_#{comments.first&.parent&.id || 'root'}" do %>
  <% comments.each do |comment| %>
    <% next if (comment.hidden? || comment.user.hidden?) && comment.children.size == 0 %>
    <%= tag.li render("comments/comment", { comment: comment, valuation: valuation }) %>
  <% end %>
<% end %>
